<div class="topic-index-wrapper">
  <div class="container">
    <% @favorite_topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>

            <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
          </div>
        </div>
        <%= link_to 'トップページ', '/',class: 'btn btn-block btn-black' %>
        <%= link_to '新規投稿', '/topics/new',class: 'btn btn-block btn-black' %>
        <%= link_to '投稿一覧', '/topics',class: 'btn btn-block btn-black' %>
      </div>
    <% end %>
  </div>
</div>
