<div class="topic-show-wrapper">
  <div class="topic-show-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="topic-index-single">

          <h2 class="form-group-title">
            Title: <%= @topic.title %>
          </h2>

          <h2 class="form-group-content">
            Content: <%= @topic.description %>
          </h2>
          <div class="topic-time">
            <%= @topic.created_at %>
          </div>
          <%= link_to("編集", "/topics/#{@topic.id}/edit", class: "text-white") %>
          <%= link_to("削除", "/topics/#{@topic.id}/destroy", {method:"post", class: "text-white"}) %>

        </div>
      </div>
    </div>
  </div>
</div>
