<div class="users-edit-wrapper">
  <div class="users-edit-container">
    <div class="form-heading">アカウント編集</div>
    <div class="form users-form">
      <div class="form-body">
        <% @user.errors.full_messages.each do |message| %>
          <div class="form-error">
            <%= message %>
          </div>
        <% end %>

        <%= form_tag("/users/#{@user.id}/update") do %>
          <p class="form-name">Name</p>
          <input name="name" value="<%= @user.name %>", class="user-form">
          <p class="form-name">Email</p>
          <input name="email" value="<%= @user.email %>", class="user-form">
          <p class="form-name">Password</p>
          <input name="password" value="<%= @user.password %>", class="user-form">
          <input type="submit" value="保存", class="user-save">
        <% end %>
      </div>
    </div>
  </div>
</div>
