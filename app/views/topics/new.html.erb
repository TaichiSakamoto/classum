<div class="topic-new-wrapper" >
  <div class="topics-new-container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">講義の要約を投稿しよう</h1>
        <%= form_for @topic do |f| %>


          <div class="form-group">
            <%= f.label :title %>
            <%= f.text_area :title, class: 'title-form-control' %>
            <%= f.label :description %>
            <%= f.text_area :description, class: 'description-form-control' %>
          </div>

          <%= f.submit '投稿', class: 'btn btn-white btn-block' %>

        <% end %>
      </div>
    </div>
  </div>
</div>
